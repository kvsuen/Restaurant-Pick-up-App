<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Order History</title>

  <!-- CSS Resets -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <!-- External CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Kreon:300,400,700'>
  <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
  <!-- Internal CSS -->
  <link rel="stylesheet" href="/styles/user_history.css">

  <!-- External JS -->
  <script src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js'></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>
  <script src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js'></script>
  <!-- Interal JS-->


</head>
<body>
  <header id="persistant">
      <nav class="navbar fixed-top navbar-expand-lg">
        <div>
          <h1><a href="/">Krusty Aged Crab</a></h1>
          <a class="logo" href="#"><img src="https://i.imgur.com/aGomLui.png" alt=""></a>
          <span>
            <% if (user) { %>
              <a class="logged" href="/users/orders">Logged in as <%=user[0].name%></a>
            <% } %>
            <a class="navitem toggle-cart" href="#">View Cart</a>
          </span>
        </div>
      </nav>
  </header>
  <div class="container">
      <div class="card">
          <div class="card-body">
            <h5 class="card-title">Order Summary</h5>
            <h6 class="card-subtitle mb-2 text-muted">Your order placed on "<%= orders[0].order_time %>"</h6>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Qty</th>
                    <th scope="col">Item</th>
                    <th class="price" scope="col">Price</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (const item of orders) { %>
                  <tr>
                    <td class="quantity" scope="row"><%=item.quantity %></td>
                    <td class="item"><%=item.item %></td>
                    <td class="price">$<%=Number(item.total_price).toFixed(2) %></td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
              <div class="total">
                TOTAL: $<%=sum.toFixed(2) %>
              </div>
          </div>
        </div>
  </div>

</body>
</html>
